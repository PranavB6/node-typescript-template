{
  "name": "express-agl-practice",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "/*** ---> main scripts": "***/",
    "build": "tsc",
    "start": "npm run build && node dist/src/main.js",
    "dev": "ts-node-dev src/main.ts",
    "/*** ---> test scripts": "***/",
    "test": "npm run build && mocha --file dist/tests/setupTests.js dist/tests/**/*.test.js",
    "test:dev": "mocha -r ts-node/register 'tests/**/*.test.ts' --file tests/setupTests.ts --watch --watch-files 'src/**/*,tests/**/*'",
    "/*** ---> lint and format scripts": "***/",
    "lint": "eslint --ext .js,.ts --max-warnings 0 src/ tests/",
    "lint:fix": "eslint --ext .js,.ts --max-warnings 0 --fix src/ tests/",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check .",
    "/*** --> husky and git hook scripts": "***/",
    "prepare": "husky install",
    "pre-commit": "npm run lint:fix && npm run format",
    "pre-push": "npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.2",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.15",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "chai": "^4.3.7",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^36.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "proxyquire": "^2.1.3",
    "sinon": "^15.2.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
